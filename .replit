modules = ["web", "nodejs-20", "ruby-3.2"]
run = "node index.js"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "node index.js"]

[workflows]
runButton = "Jekyll Server"

[[workflows.workflow]]
name = "Jekyll Server"
author = 44005159
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bundle install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bundle exec jekyll serve --host 0.0.0.0 --port 5000"
